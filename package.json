{
  "name": "linebuzz",
  "displayName": "Linebuzz",
  "description": "talk through code where it lives",
  "repository": {
    "type": "git",
    "url": "https://github.com/Spiral-Memory/LineBuzz.git"
  },
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.102.0"
  },
  "license": "Source Available License",
  "publisher": "SpiralMemory",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "linebuzz.createTeam",
        "title": "Create Team",
        "category": "LineBuzz"
      },
      {
        "command": "linebuzz.joinTeam",
        "title": "Join Team",
        "category": "LineBuzz"
      },
      {
        "command": "linebuzz.leaveTeam",
        "title": "Leave Team",
        "category": "LineBuzz"
      },
      {
        "command": "linebuzz.sendMessage",
        "title": "Send Message",
        "category": "LineBuzz"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "linebuzz.createTeam",
          "when": "extension.isLoggedIn && !linebuzz.hasTeam"
        },
        {
          "command": "linebuzz.joinTeam",
          "when": "extension.isLoggedIn && !linebuzz.hasTeam"
        },
        {
          "command": "linebuzz.sendMessage",
          "when": "extension.isLoggedIn && linebuzz.hasTeam"
        },
        {
          "command": "linebuzz.leaveTeam",
          "when": "extension.isLoggedIn && linebuzz.hasTeam"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "linebuzz-view-container",
          "title": "LineBuzz",
          "icon": "assets/logo.svg"
        }
      ]
    },
    "views": {
      "linebuzz-view-container": [
        {
          "id": "linebuzz.teamfeed",
          "icon": "assets/logo.svg",
          "name": "Team Feed",
          "when": "extension.isLoggedIn && linebuzz.hasTeam"
        },
        {
          "id": "linebuzz.chatpanel",
          "icon": "assets/logo.svg",
          "name": "LineBuzz Huddle",
          "type": "webview"
        }
      ]
    }
  },
  "scripts": {
    "prewatch": "node scripts/write-config.js",
    "watch": "node scripts/esbuild.js --watch",
    "prebuild": "node scripts/write-config.js",
    "build": "node scripts/esbuild.js --production",
    "package": "vsce package",
    "publish": "vsce publish --no-dependencies",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/he": "^1.2.3",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.102.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.1",
    "esbuild": "^0.25.3",
    "eslint": "^9.25.1",
    "npm-run-all": "^4.1.5",
    "preact": "^10.28.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.54.0",
    "@types/dompurify": "^3.0.5",
    "@types/marked": "^5.0.2",
    "dompurify": "^3.3.1",
    "dotenv": "^17.2.1",
    "he": "^1.2.0",
    "highlight.js": "^11.11.1",
    "marked": "^17.0.1"
  }
}