{
  "name": "linebuzz",
  "displayName": "linebuzz",
  "description": "talk through code where it lives",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "linebuzz.startDiscussion",
        "title": "Send Message",
        "enablement": "!commentIsEmpty"
      },
      {
        "command": "linebuzz.reply",
        "title": "Reply",
        "enablement": "!commentIsEmpty"
      },
      {
        "command": "linebuzz.refreshMessage",
        "title": "Refresh",
        "icon": {
          "dark": "resources/refresh.svg",
          "light": "resources/refresh.svg"
        }
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "linebuzz.startDiscussion",
          "when": "false"
        },
        {
          "command": "linebuzz.reply",
          "when": "false"
        },
        {
          "command": "linebuzz.refreshMessage",
          "when": "false"
        }
      ],
      "comments/commentThread/title": [
        {
          "command": "linebuzz.refreshMessage",
          "group": "navigation",
          "when": "commentController == buzz-comments && !commentThreadIsEmpty"
        }
      ],
      "comments/commentThread/context": [
        {
          "command": "linebuzz.startDiscussion",
          "group": "inline",
          "when": "commentController == buzz-comments && commentThreadIsEmpty"
        },
        {
          "command": "linebuzz.reply",
          "group": "inline",
          "when": "commentController == buzz-comments && !commentThreadIsEmpty"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.102.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.3",
    "eslint": "^9.25.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.54.0",
    "dotenv": "^17.2.1"
  }
}
